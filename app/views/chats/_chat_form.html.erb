<%= form_for chat, :url => chat_path(), remote: true, method: :post do |f| %>
  <%= f.hidden_field(:user_id,value: current_user.id.to_s) %>
  <%= f.hidden_field(:chat_room_id,value: params[:chat_room_id],class: "message_chat_room_id") %>
  <%= f.text_field :message,:class=>"messages_input" %>
  <%= f.submit %>
<% end %>